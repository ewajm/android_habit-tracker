<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.guest.habittracker.MainActivity"
    android:background="@color/colorPrimaryDark">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Habit Tracker"
        android:gravity="center"
        android:textSize="32sp"
        android:id="@+id/headingTextView"
        android:textColor="@color/colorAccent"
        android:textStyle="bold" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:weightSum="2"
    android:id="@+id/buttonLayout1"
    android:layout_below="@+id/headingTextView"
    android:layout_marginTop="50dp"
    >
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="meh"
        android:id="@+id/button"
        android:background="@drawable/kitties"
        android:layout_weight="1"
        android:textColor="@android:color/white" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fine"
        android:id="@+id/button2"
        android:background="@drawable/cooking"
        android:layout_weight="1"
        android:textColor="@android:color/white" />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:weightSum="2"
        android:layout_below="@+id/buttonLayout1"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DO THINGS"
            android:id="@+id/button3"
            android:background="@drawable/travelcat"
            android:layout_weight="1"
            android:textColor="@android:color/white" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Parkour"
            android:id="@+id/button4"
            android:background="@drawable/parkourittie"
            android:layout_weight="1"
            android:textColor="@android:color/white" />
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How are you feeling?"
        android:id="@+id/textView"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="23dp"
        android:textColor="@color/colorAccent"
        android:textSize="24sp" />

</RelativeLayout>
